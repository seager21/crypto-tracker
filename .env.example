# Server configuration
PORT=3000
NODE_ENV=development

# Authentication
JWT_SECRET=your-strong-jwt-secret-key-replace-in-production

# Firebase configuration 
FIREBASE_API_KEY=your-firebase-api-key
FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-firebase-sender-id
FIREBASE_APP_ID=your-firebase-app-id

# CoinGecko API settings
COINGECKO_API_KEY=your-coingecko-api-key
COINGECKO_API_URL=https://api.coingecko.com/api/v3
COINGECKO_PRO_API_URL=https://pro-api.coingecko.com/api/v3
COINGECKO_USE_PRO_API=false
COINGECKO_RATE_LIMIT_REQUESTS=10
COINGECKO_RATE_LIMIT_PERIOD=60000

# NewsData.io API settings
NEWSDATA_API_KEY=your-newsdata-api-key
NEWSDATA_CACHE_TTL=3600
USE_MOCK_NEWS=true  # Set to false to use the real API
